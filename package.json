{
  "scripts": {
    "dev": "concurrently \"npm run tailwind\" \"npm run flask\"",
    "tailwind": "npx @tailwindcss/cli -i ./src/css/input.css -o ./app/static/dist/output.css -w",
    "flask": "source venv/bin/activate && flask run",
    "build": "npx @tailwindcss/cli -i ./src/css/input.css -o ./app/static/dist/output.css -b"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
